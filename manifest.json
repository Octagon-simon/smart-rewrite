{
    "manifest_version": 3,
    "name": "Text Rewriter",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "tabs",
        "contextMenus",
        "scripting",
        "background"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
              ],
            "js": [
                "content.js"
            ]
        }
    ],
    "externally_connectable": {
        "matches": ["*://*.google.com/*"]
    }
}
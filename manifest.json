{
	"manifest_version": 3,
	"name": "Smart Rewrite",
	"version": "1.0.0",
	"description": "SmartRewrite is a Chrome extension that uses AI to instantly rewrite selected text on any webpage, making it sound more professional and polished. Perfect for emails, documents, social media posts, and any text that needs a professional touch.",
	"permissions": [
		"activeTab",
		"tabs",
		"contextMenus",
		"scripting",
		"background",
		"storage"
	],
	"host_permissions": [
		"*://*.freshdesk.com/*"
	],
	"background": {
		"service_worker": "background.js",
		"type": "module"
	},
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"24": "icons/icon24.png",
			"32": "icons/icon32.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"icons": {
		"16": "icons/icon16.png",
		"24": "icons/icon24.png",
		"32": "icons/icon32.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png",
		"440": "icons/icon440x280.png"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"content.js"
			],
			"css": [
				"styles.css"
			]
		}
	],
	"commands": {
		"quick_rewrite": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y",
				"mac": "Command+Shift+Y"
			},
			"description": "Quick rewrite selected text"
		}
	}
}